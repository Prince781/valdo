{
    "description": "a starter GTK3 app",
    "variables": {
        "PROGRAM_NAME": {
            "summary": "the name of the program",
            "default": "/${PROJECT_NAME}/\\w+/\\L\\0\\E/\\W+/-/",
            "pattern": "^[[:word:]-]+$"
        }
    },
    "templates": [
        "meson.build",
        "README.md",
        "src/App.vala",
        "src/MainWindow.vala",
        "ui/main-window.ui",
        "ui/resources.xml"
    ]
}
