{
    "description": "a bare app, with minimal dependencies",
    "variables": {
        "PROGRAM_NAME": {
            "summary": "the name of the program",
            "default": "/${PROJECT_NAME}/\\w+/\\L\\0\\E/\\W+/-/",
            "pattern": "^[[:word:]-]+$"
        }
    },
    "templates": [
        "meson.build",
        "README.md",
        "src/meson.build"
    ]
}
